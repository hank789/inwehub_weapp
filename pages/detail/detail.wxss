.detail-bottom {
  width: 100%;
  border-top: 1px solid #ededed;
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 1001;
}

.detail-bottom .bottom-box {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: relative;
}

.detail-bottom .bottom-box .contact {
  width: 100rpx;
  height: 80rpx;
  margin: 0 auto;
  position: absolute;
  text-align: center;
  line-height: 80rpx;
  left: 100rpx;
  opacity: 0;
}

.detail-bottom .sy-bottom {
  padding: 15rpx 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  flex: 1;
  text-align: center;
}

.detail-bottom .btn_order {
  background: #ff4856;
  color: #fff;
}

.detail-bottom .btn_cart {
  color: #fff;
  background: #ff6e30;
}

.detail-bottom .order_color {
  background: #a9a9a9;
  color: #fff;
}

.detail-bottom .cart_color {
  color: #fff;
  background: #a9a9a9;
}

.detail-bottom .item {
  border-right: 1px solid #efefef;
}

.detail-bottom .item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.detail-bottom .message {
  /* display:inline-block;
