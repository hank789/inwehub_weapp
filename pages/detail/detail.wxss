}

.detail-bottom .item .doc {
  font-size: 24rpx;
}

.detail-bottom .docbutton {
  font-size: 24rpx;
  border: none;
  line-height:1.6;
  padding-left: 0px;
  padding-right: 0px;
}

.detail-bottom .selec_active .doc {
  color: #ff4856;
}

