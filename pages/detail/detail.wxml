<!--logs.wxml-->
<view class="container">
	<view class="container-body space-content">
	  <view class="space-top">
  	  <view class="space-info">
  	  	<view class="space-title">{{demand.title}}</view>

  	  	<view class="space-list">
  	  		<view class="space-item">
  	  			<text class="text-left">薪资：</text>
  	  			<text class="text-right">
  	  				<text class="text-orange">{{demand.salary}}</text> 元/天
  	  			</text>
  	  		</view>
  	  		<view class="space-item">
  	  			<text class="text-left">行业：</text>
  	  			<text class="text-right">{{demand.industry.text}}</text>
  	  		</view>
  	  		<view class="space-item">
  	  			<text class="text-left">地点：</text>
  	  			<text class="text-right">{{demand.address}}</text>
  	  		</view>
            <view class="space-item">
                <text class="text-left">项目周期：</text>
                <text class="text-right">{{demand.project_cycle.text}}</text>
            </view>
            <view class="space-item">
                <text class="text-left">项目开始日期：</text>
                <text class="text-right">{{demand.project_begin_time}}</text>
            </view>
  	  	</view>
  	  </view>
	  </view>

      <view class="space-block">
        <view class="space-block-title">发布者</view>
        <view class="space-block-content">
            <view class="space-list">
                <view class="space-item">
                    <text class="text-left">姓名：</text>
                    <text class="text-right">{{ demand.publisher_name }}</text>
                </view>
                <view class="space-item">
                    <text class="text-left">职位：</text>
                    <text class="text-right">{{ demand.publisher_title }}</text>
                </view>
                <view class="space-item">
                    <text class="text-left">公司：</text>
                    <text class="text-right">{{ demand.publisher_company }}</text>
                </view>
                <view class="space-item">
                    <text class="text-left">邮箱：</text>
                    <text class="text-right">{{ demand.publisher_email }}</text>
                </view>
            </view>
            <view class="space-passage"></view>
        </view>
      </view>

	  <view class="space-block">
	  	<view class="space-block-title">需求描述</view>
	  	<view class="space-block-content">
	  		<text class="space-passage">{{demand.description}}</text>
	  	</view>
  	</view>
	</view>
	<view class="container-footer">
		<text class="share-btn" bindtap="showShareMenu">分享</text>
		<block wx:if="{{demand.is_author}}">
            <text bindtap="authCloseDemand">关闭</text>
            <text bindtap="authEditDemand">修改</text>
        </block>
		<block wx:if="{{!demand.is_author}}">
		    <text class="contact-btn" bindtap="goContact">电话联系</text>
		</block>
	</view>
</view>
