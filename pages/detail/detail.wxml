
<!--引入加载更多模版-->
<import src="../../template/loading" />

<!--详情页-->
<view class="container">
  <view class="c-top">
    <view class="c-video-img">

    </view>

    <!--简介-->
    <view class="t-info">
      <view class="ti-top">
        <text>400,00次查看</text>
        <text>{{ question.created_at }}</text>
      </view>
      <view class="ti-content">
      {{ question.description }}
      </view>
      <view class="ti-bottom">
        <view>
          <text class="iconfont icon-my"></text><text>牧民新歌</text>
        </view>
        <view>
          <text class="iconfont icon-xihuan"></text><text>50,000喜欢</text>
        </view>
        <view>
          <text class="iconfont icon-pinglun1"></text><text>{{ comments.length }}评论</text>
        </view>
      </view>
    </view>
  </view>

  <!--评论列表-->
  <view class="comments">
    <view class="item touch-active" wx:for="{{ comments }}" wx:key="" wx:for-item="c">
      <view class="i-left">
        <image class="c-u-img" src="{{c.user_avatar_url}}"></image>
      </view>
      <view class="i-right">
        <view class="top">
          <text class="u-name">{{c.user_name}}</text>
          <text class="time">{{c.created_at}}</text>
        </view>

        <!--评论内容-->
        <view class="content">
          <text>{{c.content}}</text>
        </view>
      </view>
    </view>
  </view>

  <!--加载更多模版-->
  <block wx:if="{{isLoading}}">
    <template is="loading" />
  </block>


  <!--评论盒子-->
  <view class="comment-fixed">
    <view class="cf-box">
      <textarea class="cf-content" cursor-spacing="15" bindfocus="textAreaFocus" bindblur="textAreaBlur" auto-height value="{{content}}" placeholder="我来回答" />
      <text class="cf-send touch-active" bindtap="commentSubmit">发送</text>
    </view>
  </view>
</view>
<!--悬浮菜单-->
<view class="menu">
    <text class="iconfont icon-svg35"></text>
</view>