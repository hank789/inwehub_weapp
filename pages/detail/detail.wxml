<view class="container">
    <view bindtap="" class="order-detail" data-id="{{ question.id }}">
        <view class="author">
            <image class="author-avatar" src="{{ question.user_avatar_url}}" background-size="cover"></image>
            <view class="author-info">
                <view class="author-name">{{ question.user_name}}</view>
                <view class="post-time">{{ question.created_at}}</view>
            </view>
        </view>
        <view class="order-container">
            <view class="order-description">
                {{ question.description }}
            </view>
            
            <view class="piuctures-container">
            <image class="content-picture" wx:for="{{ question.pictures }}" wx:key="{{ index }}" src="{{ item }}" background-size="cover"></image>            
            </view>
        </view>
        
        <view class="order-comments" wx:if="{{ comments && comments.length > 0 }}">
            评论
            <view class="order-comment" wx:for="{{ comments }}" wx:key="{{ index }}">
                <view class="author">
                    <image class="author-avatar" src="{{ item.user_avatar_url}}" background-size="cover"></image>
                    <view class="author-info">
                        <view class="author-name">{{ item.user_name}}</view>
                        <view class="post-time">{{ item.created_at }}</view>
                    </view>
                </view>
                <view class="comment-str">
                    {{ item.content }}
                </view>
            </view>
        </view>
    </view>
    <view class="tool-bar">
        <form bindsubmit="commentSubmit" data-objId="{{ order.id }}" class="comment-tool">
            <input bindinput="commentInput" placeholder="输入评论" class="comment-input" />
            <button type="primary" form-type="submit" class="comment-submit"> 评论 </button>
        </form>
    </view>
</view>
