<!--pages/mine/mine.wxml-->
<view class="page">
	<view class="page__hd">
	    <view class="userinfo">
		    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
		    <text class="userinfo-nickname">{{ userInfo.name }}</text>
	    </view>
	</view>
	<view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view bindtap="tapViewInfo" class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">认证身份</view>
                <view class="weui-cell__ft weui-cell__ft_in-access" style="font-size: 0">
                    <view style="display: inline-block;vertical-align:middle; font-size: 17px;">{{ userInfo.status?'已认证':'审核中' }}</view>
                </view>
            </view>
            <view bindtap="tapMyHistory" class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">我的足迹</view>
                <view class="weui-cell__ft weui-cell__ft_in-access" style="font-size: 0">
                    <view style="display: inline-block;vertical-align:middle; font-size: 17px;"></view>
                </view>
            </view>
            <view bindtap="tapMyMessages" class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">
                    <view style="display: inline-block; vertical-align: middle">我的消息</view>
                    <view wx:if="{{userInfo.total_unread > 0}}" class="weui-badge" style="margin-left: 5px;">{{ userInfo.total_unread }}</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
        </view>
	</view>
</view>
