<view class="page">
  <view class="page__bd">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{ errorMsg }}</view>
    <form bindsubmit="formSubmit">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input {{ nameError ? 'weui-cell_warn' : '' }}">
                <view class="weui-cell__hd">
                    <view class="weui-label">姓名</view>
                </view>
                <view class="weui-cell__bd">
                    <input focus="true" value="{{name}}" bindblur="bindNameBlur" class="weui-input" placeholder="请输入姓名" />
                </view>
                <view class="weui-cell__ft" wx:if="{{nameError}}">
                    <icon type="warn" size="23" color="#E64340"></icon>
                </view>
            </view>
            <view class="weui-cell weui-cell_input {{ companyError ? 'weui-cell_warn' : '' }}">
                <view class="weui-cell__hd">
                    <view class="weui-label">公司</view>
                </view>
                <view class="weui-cell__bd">
                    <input value="{{ company }}" bindblur="bindCompanyBlur" class="weui-input" placeholder="请输入公司" />
                </view>
                <view class="weui-cell__ft" wx:if="{{companyError}}">
                    <icon type="warn" size="23" color="#E64340"></icon>
                </view>
            </view>
            <view class="weui-cell weui-cell_input {{ titleError ? 'weui-cell_warn' : '' }}">
                <view class="weui-cell__hd">
                    <view class="weui-label">职位</view>
                </view>
                <view class="weui-cell__bd">
                    <input value="{{ title }}" bindblur="bindTitleBlur" class="weui-input" placeholder="请输入职位" />
                </view>
                <view class="weui-cell__ft" wx:if="{{titleError}}">
                    <icon type="warn" size="23" color="#E64340"></icon>
                </view>
            </view>
            <view class="weui-cell weui-cell_input {{ emailError ? 'weui-cell_warn' : '' }}">
                <view class="weui-cell__hd">
                    <view class="weui-label">邮箱</view>
                </view>
                <view class="weui-cell__bd">
                    <input value="{{ email }}" bindblur="bindEmailBlur" class="weui-input" placeholder="请输入邮箱" />
                </view>
                <view class="weui-cell__ft" wx:if="{{emailError}}">
                    <icon type="warn" size="23" color="#E64340"></icon>
                </view>
            </view>
            <view class="weui-cell weui-cell_input {{ phoneError ? 'weui-cell_warn' : '' }}">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号</view>
                </view>
                <view class="weui-cell__bd">
                    <input bindblur="bindPhoneBlur" value="{{ phone }}" type="number" class="weui-input" placeholder="请输入手机号" />
                </view>
                <view class="weui-cell__ft">
                    <button bindtap="tapSendCode" disabled="{{disabledSendPhoneCode}}" class="weui-btn mini-btn" type="primary" size="mini">{{sendCodeLabel}}</button>
                </view>
            </view>
            
            <view class="weui-cell weui-cell_input weui-cell_vcode {{ codeError ? 'weui-cell_warn' : '' }}">
                <view class="weui-cell__hd">
                    <view class="weui-label">验证码</view>
                </view>
                <view class="weui-cell__bd">
                    <input value="{{ code }}" bindblur="bindCodeBlur" type="number" class="weui-input" placeholder="请输入验证码" />
                </view>
                <view class="weui-cell__ft" wx:if="{{codeError}}">
                    <icon type="warn" size="23" color="#E64340"></icon>
                </view>
            </view>
        </view>
        <view class="weui-cells__tips"></view>
        
        <view class="weui-btn-area">
          <button formType="submit" class="weui-btn" type="primary">提交认证</button>
        </view>
    </form>

  </view>
</view>
