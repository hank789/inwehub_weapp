.index-container {
  background-color: #f2f2f2;
}

.location-info {
   /* Box-model */
  height: 30px;
  padding-left: 20px;
  margin-bottom: 7px;

  /*Typography*/
  line-height: 30px;

  /* Visual */
  background: url(data:image/png;base64,) 2px no-repeat #fff;
  border: solid #e5e5e5;
  border-width: 1px 0;
}

.order-item {
  margin-bottom: 14rpx;
  padding: 15rpx;
  overflow: hidden;
  background-color: #fff;
  border: solid #e5e5e5;
  border-width: 1px 0;
  position: relative;
}

.author-avatar {
  float: left;
  width: 64rpx;
  height: 64rpx;
  border-radius: 10%;
}

.author-info {
  float: left;
  width: 200px;
  margin-left: 10px;
  margin-bottom: 10px;
}

.content-container {
  clear: both;
  overflow: hidden;
}

.content-container .content-picture {
  float: left;
  width: 192rpx;
  height: 192rpx;
}

.content-container .content-text {
  float: left;
  width: calc(100% - 230rpx);
  height: 192rpx;
  margin-left: 38rpx;
  color: #666;
  overflow: hidden;
}

.content-text .title {
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 22rpx;

  font-size: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.content-text .content {
  height: 120rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.content-container .button {
  float: left;
  margin-top: 12rpx;
  /*border: solid 1px #999;*/
}

.content-container .button .button-item {
  float: left;
  width: 235rpx;
  height: 26px;
  line-height: 26px;
  text-align: center;
}

.button-item:not(:last-child) {
  border-right: solid 1px #ccc;
}

.button-item.thumbs-up {
  background: url(data:image/png;base64,) no-repeat 30rpx 5px;
}

.button-item.comment {
  background: url(data:image/png;base64,) no-repeat 30rpx 5px;
}

.button-item.join {
  background: url(data:image/png;base64,) no-repeat 30rpx 5px;
}

.manageOrder{
  position:absolute;
  right:10px;
  width:52px;
  text-align: center;
}
.manageOrder .manage-img{
  width:30px;
  height:25px;
}
.manageOrder .manage-item{
  background-color: #e5e5e5;
  border:1px solid #ccc;
  padding:3px 10px;
}