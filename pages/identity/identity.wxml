<view class="page">
  <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="success" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">认证成功</view>
        </view>
  </view>
  <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">姓名</view>
                <view class="weui-cell__ft">{{userInfo.name}}</view>
            </view>
        </view>

       <view class="weui-cells weui-cells_after-title">
           <view class="weui-cell">
               <view class="weui-cell__bd">公司</view>
               <view class="weui-cell__ft">{{userInfo.company}}</view>
           </view>
       </view>

      <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell">
              <view class="weui-cell__bd">职位</view>
              <view class="weui-cell__ft">{{userInfo.title}}</view>
          </view>
      </view>

     <view class="weui-cells weui-cells_after-title">
         <view class="weui-cell">
             <view class="weui-cell__bd">手机</view>
             <view class="weui-cell__ft">{{userInfo.mobile?userInfo.mobile:''}}</view>
         </view>
     </view>

    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__bd">邮箱</view>
            <view class="weui-cell__ft">{{userInfo.email}}</view>
        </view>
    </view>

        <view class="weui-btn-area">
          <button bindtap="goToSubmit" class="weui-btn" type="primary">发布需求</button>
        </view>
  </view>
</view>
