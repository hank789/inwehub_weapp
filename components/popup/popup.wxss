/* pages/popup/popup.wxss */
.page {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}
.popup {
  position: relative;
}
.popupBox {
  width:560rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 2000;
  text-align: center;
  font-size: 26rpx;
  color: #808080;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  padding: 20rpx 20rpx 63rpx;
  border-radius: 36rpx;
  background: #fff;
}
.close {
  text-align: right;
}
.close image {
  width:49rpx;
  height:49rpx;
}
.code image {
  width:300rpx;
  height:301rpx;
  margin-top: 26rpx;
}